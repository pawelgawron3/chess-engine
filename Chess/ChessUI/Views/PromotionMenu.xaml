<UserControl x:Class="ChessUI.Views.PromotionMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="460"
             Background="#80000000">

    <Border Style="{StaticResource BorderStyle}"
            Padding="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{StaticResource FillColor}">
        <StackPanel RenderOptions.BitmapScalingMode="HighQuality">

            <TextBlock Text="SELECT A PIECE TO PROMOTE"
                       Style="{StaticResource TextStyle}"
                       FontSize="22"
                       Margin="0,0,0,20" />

            <UniformGrid Columns="4"
                         HorizontalAlignment="Center"
                         Cursor="Hand">

                <Button Margin="10" Padding="10"
                        Command="{Binding PromotionCommand}"
                        CommandParameter="Queen">
                    <Image Width="60" Height="60" Source="{Binding QueenImagePath}" />
                </Button>
                <Button Margin="10" Padding="10"
                        Command="{Binding PromotionCommand}"
                        CommandParameter="Rook">
                    <Image Width="60" Height="60" Source="{Binding RookImagePath}" />
                </Button>
                <Button Margin="10" Padding="10"
                        Command="{Binding PromotionCommand}"
                        CommandParameter="Bishop">
                    <Image Width="60" Height="60" Source="{Binding BishopImagePath}" />
                </Button>
                <Button Margin="10" Padding="10"
                        Command="{Binding PromotionCommand}"
                        CommandParameter="Knight">
                    <Image Width="60" Height="60" Source="{Binding KnightImagePath}" />
                </Button>
            </UniformGrid>
        </StackPanel>
    </Border>
</UserControl>